<style>
    html {
        margin: 0;
        padding: 0;
    }

    ul {
        width: 100%;
        list-style: none;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        margin-left: 4vw;
        margin-right: 4vw;
    }

    .nav-image {
        max-height: 2rem;
        width: auto;
        margin-right: auto;
    }

    .left-side {
        margin-right: auto;
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

    li {
        padding-right: 2em;
    }

    #nav-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: radial-gradient(blue, rgba(255, 255, 255, 0.385));
        color: white;
        position: absolute;
        width: 100vw;
        height: 72px;
        top: 0px;
        /* animation: 1s ease-in 0s slideInFromLeft; */
    }

    /* @keyframes slideInFromLeft {
        0% {
            transform: translateX(-100%);
        }
        100% {
            transform: translateX(0);
        }
    } */

    .nav-anchor {
        height: 100%;
        color: white;
        text-decoration: none;
        transition: 0.2s;
    }

    .nav-anchor:hover {
        color: white;
        font-size: 1.2em;
    }

    .sidebar {
        position: fixed;
        margin: 0;
        padding-top: 20%;
        top: 0;
        right: 0;
        height: 100vh;
        width: 250px;
        z-index: 999;
        background-color: rgba(0, 0, 0, 0.359);
        box-shadow: -10px 0 10px rgba(0, 0, 0, 0.1);
        display: none;
        /* would othewise be display: flex */
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
        backdrop-filter: blur(10px);
    }

    .sidebar li {
        width: 100%;
    }

    .sidebar a {
        width: 100%;
    }

    .heading-name {
        max-width: 20vw;
        height: auto;
        text-decoration: none;
        color: white;
        font-weight: bold;
    }
</style>

<div id="nav-bar">
    <ul class="nav-button-list">
        <div class="left-side">
